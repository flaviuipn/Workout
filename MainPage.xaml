<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RentACarM.MainPage">

    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="cars.jpg"
               SemanticProperties.Description="Rent a Car Logo"
               HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Rent A Car" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="Welcome to Rent A Car, your go-to app for managing car rentals." />
        <Label Text="Explore our features and enjoy a seamless car rental experience." />
    </VerticalStackLayout>

</ContentPage>
